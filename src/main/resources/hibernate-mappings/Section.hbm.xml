<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.lucia.trucksmanagement.persistence.domain.Section" table="section">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="initialLatitude" column="initial_laitude" not-null="true"/>
        <property name="finalLatitude" column="final_laitude" />
        <property name="initialLongitude" column="initial_longitude"/>
        <property name="finalLongitude" column="final_longitude"/>
        <property name="initialPoint" column="initial_point" />
        <property name="initialDate" column="initial_date" />
        <property name="carrierId" column="carrier_id" />
        <property name="journeyId" column="journey_id" />
        <property name="trailerId" column="trailer_id" />
        <property name="truckId" column="truck_id" />
        

     </class>
</hibernate-mapping>
