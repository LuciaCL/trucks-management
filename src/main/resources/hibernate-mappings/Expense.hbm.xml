<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.lucia.trucksmanagement.persistence.domain.Expense" table="expense">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="cost" column="cost" not-null="true"/>
        <property name="concept1" column="concept1" />
        <property name="concept2" column="concept2" />
        <property name="expenseDate" column="expense_date" />
        <property name="carrierId" column="carrier_id" />
        <property name="journeyId" column="journey_id" />
        <property name="trailerId" column="trailer_id" />
        <property name="truckId" column="truck_id" />
     </class>
</hibernate-mapping>
