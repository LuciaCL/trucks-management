<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.lucia.trucksmanagement.persistence.domain.Truck" table="truck">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="plateNumber" column="plate_number" not-null="true"/>
        <property name="tare" column="tare" />
        <property name="weight" column="weight"/>
        <property name="dimension" column="dimension"/>
        <property name="brand" column="brand" />
        <property name="model" column="model" />
     </class>
</hibernate-mapping>
